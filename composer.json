{
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require": {
        "ext-pdo": "*",
        "doctrine/dbal": "^3.4",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^2.13",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "slim/twig-view": "^3.3",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.13",
        "phpunit/phpunit": "^9.5"
    }
}
